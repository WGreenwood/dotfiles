#!/usr/bin/env bash

if [ "$#" != "1" ] || [ "$1" != "on" ] && [ "$1" != "off" ] && [ "$1" != "get" ] && [ "$1" != "toggle" ]; then
  echo "Usage: $(basename $0) [on/off/toggle/get]"
  exit 0
fi


get_dpms() {
  xset q | grep 'DPMS is Enabled' > /dev/null
  return $?
}

dpms_on() {
  xset s 180 120
  xset +dpms
  polybar-msg hook dpms 1
}
dpms_off() {
  xset s off -dpms
  xset -dpms
  polybar-msg hook dpms 2
}

if [ "$1" == "on" ]; then
  dpms_on
elif [ "$1" == "off" ]; then
  dpms_off
elif [ "$1" == "toggle" ]; then
  get_dpms
  if [ "$?" == "0" ]; then
    dpms_off
  else
    dpms_on
  fi
else
  get_dpms
  if [ "$?" == "0" ]; then
    echo 'off'
  else
    echo 'on'
  fi
fi

