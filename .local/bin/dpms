#!/usr/bin/env bash

if [ "$#" != "1" ] || [ "$1" != "on" ] && [ "$1" != "off" ] && [ "$1" != "get" ]; then
  echo "Usage: $(basename $0) [on/off/get]"
  exit 0
fi

if [ "$1" == "on" ]; then
  xset s 180 120
  xset +dpms
elif [ "$1" == "off" ]; then
  xset s off -dpms
  xset -dpms
else
  if [ "$(xset q | grep 'DPMS is Enabled')" ]; then
    echo 'on'
  else
    echo 'off'
  fi
fi

